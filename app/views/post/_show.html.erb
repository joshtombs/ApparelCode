<div class="popup-container container-fluid">
  <div class="profile-bar col-md-2">
    <div class="profile-picture col-md-12">
      <div class="caption-window">
        <%= image_tag("/assets/people_pics/" + @user.id.to_s + ".jpg", class: "profile-image") %>
        <div class="caption-name">
          <%= @user.username %> <br />
        </div>
      </div>
    </div>
    <div class="user-info col-md-12">
      <%= @user.age %> Year Old<br />
      <%= @user.title %> <br />
      <%= @user.city %> <br />
      <%= @user.country %> <br />
    </div>
    <div class="col-md-12">
      More from <%= @user.username %> (<%= @user.posts.count %>)
    </div>
  </div>
  <div class="col-md-10">
    <div class="col-md-11 post-name">
      <div class="col-md-12">
        <div class="col-md-12">
          <%= @post.name %>
        </div>
      </div>
    </div>
    <div class="col-md-1">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="col-md-12">
      <div class="col-md-7">
        <div class="left-icons col-md-6">
          Likes &amp; Views
        </div>
        <div class="right-icons col-md-6">
          <%= image_tag("/assets/share.png", class: "small-icon") %>
          <%= image_tag("/assets/report.png", class: "small-icon") %>
        </div>
        <div class="col-md-12">
          <%= image_tag("/assets/rectangle_pics/" + @post.id.to_s + ".jpg", class: "post-main-image") %>
        </div>
        <div class="post-date col-md-12">
          <%= image_tag("/assets/clock.png", class: "small-icon") %>
          <%= @post.created_at.to_time.strftime('%B %e, %Y')%>
        </div>
        <div class="comments col-md-12">
          <span class="comments-header">
          Comments (0)
          </span>
        </div>
      </div>
      <div class="col-md-5">
        <h3>Items:</h3>
        <ol>
          <% @post.items.split(", ").each do |item| %>
            <li><%= item %></li>
          <% end %>
        </ol>
        <h3>Tags:</h3>
        <%= @post.tags %>
        <h3>Description:</h3>
        <%= @post.description %>
      </div>
    </div>
  </div>
</div>
